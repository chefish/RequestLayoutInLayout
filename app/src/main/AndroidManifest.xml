        </activity>
        <activity
            android:name=".DemoActivity1"
            android:label="DemoActivity1"/>
        <activity android:name=".DemoActivity2"
            android:label="DemoActivity2"/>
        <activity
            android:name=".DemoActivity3"
            android:label="DemoActivity3" />
    </application>

</manifest>